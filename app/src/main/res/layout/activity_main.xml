<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backGrand"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ماشین حساب"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape_2"/>

    <Button
        android:id="@+id/btn_siteView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نمایش سایت"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape_2"/>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape_2"
        android:text="نمایش دیالوگ"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_mediaPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مدیا پلیر"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape_2"/>

    <Button
        android:id="@+id/btn_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نمایش لیست ویو"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape_2"/>

    <Button
        android:id="@+id/btn_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نمایش گرید ویو"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape_2"
        android:layout_marginBottom="80dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

